@{
	ViewBag.Title = "Location - Holiday rental apartment in Los Cristianos, Tenerife, Canary Islands";
}

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

<h1>Location of holiday rental apartment in Los Cristianos, Tenerife</h1>

<p>
	See the maps below to get an idea of where our holiday rental apartment is located.
</p>

<p>
	<label>
		<b>Tenerife's location in the world</b>
	</label>
</p>

<div class="googleMap">
	<div id="map-world" class="googleMapInner"></div>
</div>

<div class="clear"></div>

<p>
	<label>
		<b>
			Los Cristianos's location in Tenerife
		</b>
	</label>
</p>

<div class="googleMap">
	<div id="map-los-cristianos" class="googleMapInner"></div>
</div>

<div class="clear"></div>

<p>
	<label>
		<b>Summerland Apartments location in Los Cristianos</b>
	</label>
</p>

<div class="googleMap">
	<div id="map-summarlend" class="googleMapInner"></div>
</div>

<script type="text/javascript">

	var myLatlng = new google.maps.LatLng(28.054082, -16.708537);
	var myGamma = 1;
	var myHue = 'x#F0C23C';
	var mySaturation = 100;
	var myContent = "Summerland Apartments, Calle Boston, 4, 38650 Arona, Santa Cruz de Tenerife, Spain";

	function initializeWorld() {
		//debugger;
		var myOptions = {
			zoom: 4,
			center: myLatlng,
			mapTypeId: google.maps.MapTypeId.ROADMAP//,
			//styles: [{ featureType: 'all', elementType: 'all', stylers: [{ gamma: myGamma }, { hue: myHue }, { lightness: 0 }, { invert_lightness: false }, { saturation: mySaturation }] }]
		};

		var panel = document.getElementById('map-world');
		var map = new google.maps.Map(panel, myOptions);

		var marker = new google.maps.Marker({ position: myLatlng, map: map, title: "Main" });

		var infoWindow = new google.maps.InfoWindow({ content: myContent, disableAutoPan: false, maxWidth: 50 });
		google.maps.event.addListener(marker, 'click', function () { infoWindow.open(map, marker); });
	}

	function initializeLosCristianos() {
		//debugger;
		var myOptions = {
			zoom: 8,
			center: myLatlng,
			mapTypeId: google.maps.MapTypeId.ROADMAP//,
			//styles: [{ featureType: 'all', elementType: 'all', stylers: [{ gamma: myGamma }, { hue: myHue }, { lightness: 0 }, { invert_lightness: false }, { saturation: mySaturation }] }]
		};

		var panel = document.getElementById('map-los-cristianos');
		var map = new google.maps.Map(panel, myOptions);

		var marker = new google.maps.Marker({ position: myLatlng, map: map, title: "Main" });

		var infoWindow = new google.maps.InfoWindow({ content: myContent, disableAutoPan: false, maxWidth: 50 });
		google.maps.event.addListener(marker, 'click', function () { infoWindow.open(map, marker); });
	}

	function initializeSummerland() {
		//debugger;
		var myOptions = {
			zoom: 15,
			center: myLatlng,
			mapTypeId: google.maps.MapTypeId.ROADMAP//,
			//styles: [{ featureType: 'all', elementType: 'all', stylers: [{ gamma: myGamma }, { hue: myHue }, { lightness: 0 }, { invert_lightness: false }, { saturation: mySaturation }] }]
		};

		var panel = document.getElementById('map-summarlend');
		var map = new google.maps.Map(panel, myOptions);

		var marker = new google.maps.Marker({ position: myLatlng, map: map, title: "Main" });

		var infoWindow = new google.maps.InfoWindow({ content: myContent, disableAutoPan: false, maxWidth: 50 });
		google.maps.event.addListener(marker, 'click', function () { infoWindow.open(map, marker); });
	}

	initializeWorld();
	initializeLosCristianos();
	initializeSummerland();
</script>
