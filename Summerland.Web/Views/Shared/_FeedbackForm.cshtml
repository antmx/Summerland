@model Summerland.BL.Feedback

<div class="feedback-form">
	@using (Ajax.BeginForm("Index", "FeedbackForm", null, new AjaxOptions { UpdateTargetId = "result" }, new { id = ViewData["id"] }))
 {
		<fieldset class="fieldset">
			<legend>Feedback form</legend>

			<div class="editor-label">
				@Html.LabelFor(model => model.FirstName)
			</div>
			@Html.EditorFor(m => m.FirstName)
			@Html.ValidationMessageFor(m => m.FirstName)

			<div class="spacer-v10"></div>

			<div class="editor-label">
				@Html.LabelFor(model => model.Surname)
			</div>
			@Html.EditorFor(m => m.Surname)
			@Html.ValidationMessageFor(m => m.Surname)

			<div class="spacer-v10"></div>

			<div class="editor-label">
				@Html.LabelFor(model => model.TelNum)
			</div>
			@Html.EditorFor(m => m.TelNum)
			@Html.ValidationMessageFor(m => m.TelNum)

			<div class="spacer-v10"></div>

			<div class="editor-label">
				@Html.LabelFor(model => model.Email)
			</div>
			@Html.EditorFor(m => m.Email)
			@Html.ValidationMessageFor(m => m.Email)

			<div class="spacer-v10"></div>

			<div class="editor-label">
				@Html.LabelFor(model => model.Rating)
			</div>
			@Html.EditorFor(m => m.Rating, new { Rows = 4 })
			@Html.ValidationMessageFor(m => m.Rating)

			<div class="spacer-v10"></div>

			<div class="editor-label">
				@Html.LabelFor(model => model.Message)
			</div>
			@Html.EditorFor(m => m.Message, new { Rows = 4 })
			@Html.ValidationMessageFor(m => m.Message)

			<div class="spacer-v10"></div>

			<div class="buttons">
				<input type="submit" value="Submit feedback" title="Submit your feedback" class="btn btn-primary" />
			</div>
		</fieldset>
	 
		<div class="success">
			<div class="alert alert-success">
				<p class="float-l">
					<span class="icon-tick"></span>
				</p>

				<div class="float-l msg"></div>
			</div>
		</div>

		<div class="error">
			<div class="alert alert-error">
				<p class="float-l">
					<span class="icon-cross"></span>
				</p>

				<div class="float-l msg"></div>
			</div>
		</div>
 }
</div>

<script type="text/javascript">
	$(function () {
		var $fieldset = $('#@ViewData["id"] .fieldset');
		var $success = $('#@ViewData["id"] .success');
		var $successMsg = $('#@ViewData["id"] .success .msg');

		var $error = $('#@ViewData["id"] .error');
		var $errorMsg = $('#@ViewData["id"] .error .msg');

		$success.hide();
		$error.hide();

		//$('form').submit(function () {
		$('#@ViewData["id"]').submit(function () {
			if ($(this).valid()) {

				$success.hide();
				$error.hide();

				$.ajax({
					url: this.action,
					type: this.method,
					data: $(this).serialize(),
					success: function (result) {
						if (result.error === true) {
							$error.show();
							$errorMsg.html(result.message);
						}
						else {
							$fieldset.hide();
							$success.show();
							$successMsg.html(result);
						}
					},
					error: function (result) {
						$error.show();
						$errorMsg.html(result);
					}
				});
			}

			return false;
		});
	});
</script>
